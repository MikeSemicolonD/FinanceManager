@model FinanceManager.Models.RegisterViewModel
@{
    ViewBag.Title = Resources.Global.Register;
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <span class = "col-md-2 control-label">@Resources.Global.Email</span>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <span class = "col-md-2 control-label">@Resources.Global.Password</span>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <span class = "col-md-2 control-label">@Resources.Global.ConfirmPassword</span>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="@Resources.Global.Register" />
        </div>
    </div>
    <p>
        @Html.ActionLink(Resources.Global.AlreadyHaveAnAccount + " " + Resources.Global.Login, Resources.Global.Login)
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
