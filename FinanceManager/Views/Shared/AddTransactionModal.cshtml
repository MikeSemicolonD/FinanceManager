@model FinanceManager.Models.TransactionModelList

<div id="MyModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Transaction</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid ml-auto">
                    <div class="mb-3">
                        <label>Category</label>
                        @Html.TextBoxFor(m => m.NewModel.Category)
                        <div class="invalid-feedback">
                            Category is required.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label>Description</label>
                        @Html.TextBoxFor(m => m.NewModel.Description)
                        <div class="invalid-feedback">
                            Description is required.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label>Amount</label>
                        @Html.TextBoxFor(m => m.NewModel.Amount, new { @type = "number", step = "0.01" })
                        <div class="invalid-feedback">
                            Please enter an amount.
                        </div>
                    </div>

                    <!-- TODO: Setup before getting here using the controller or use js to populate drop down? -->
                    @*<div class="mb-3">
                        <label>Account Type</label>
                        @Html.TextBoxFor(m => m.NewModel.AccountType)
                    </div>*@

                    <div class="mb-3">
                        <label>Date</label>
                        <!--TODO: Set to today by default-->
                        @Html.TextBoxFor(m => m.NewModel.TransactionDate, new { @type = "date" })
                    </div>

                    <div class="mb-3">
                        <label title="(Example: Food, Gas, Water, Electricity)">Essential Transaction</label>
                        @Html.TextBoxFor(m => m.NewModel.IsEssential, new { @type = "checkbox" })
                    </div>
                </div>
            </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">ADD</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
