<div id="AccountTypeModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Resources.Global.Create @Resources.Global.AccountType</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid ml-auto">
                    <div class="mb-3">
                        <label>@Resources.Global.AccountType @Resources.Global.Name: </label>
                        <input id="AddAccountTypeInput" name="@Resources.Global.AccountType" type="text" value="">
                        <div class="invalid-feedback">
                            @Resources.Global.AccountTypeIsRequired.
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="AddNewAccountType" type="button" onclick="AddAccountType()" class="btn btn-primary">@Resources.Global.Add</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@Resources.Global.Close</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function AddAccountType() {
        if ($("#AddAccountTypeInput").val().length > 0) {
            var value = $("#AddAccountTypeInput").val();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("AddAccountType", "AccountType")',
                data: { typeName: value },
                success: function (data) {
                    location.reload();
                },
                error: function (data) {
                    alert(JSON.stringify(data));
                }
            });
        }
    }
</script>
