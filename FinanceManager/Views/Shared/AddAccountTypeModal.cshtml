<div id="AccountTypeModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Account Type</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid ml-auto">
                    <div class="mb-3">
                        <label>Account Type Name: </label>
                        <input id="AddAccountTypeInput" name="AccountType" type="text" value="">
                        <div class="invalid-feedback">
                            Account Type is required.
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="AddNewAccountType" type="button" onclick="AddAccountType()" class="btn btn-primary">ADD</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
    <script type="text/javascript">
        function AddAccountType() {
         if ($("#AddAccountTypeInput").val().length > 0) {
            var value = $("#AddAccountTypeInput").val();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("AddAccountType", "AccountType")',
                data: { typeName: value },
                success: function (data) {
                    location.reload();
                },
                error: function (data) {
                    alert(JSON.stringify(data));
                }
            });
        }
    }
    </script>
