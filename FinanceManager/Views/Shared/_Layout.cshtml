<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MiTiM Financial</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()
            <nav class="navbar navbar-expand navbar-dark bg-dark navbar-fixed-top">
                <div class="container">
                    @Html.ActionLink("MiTiM", "Index", "Home", new { @class = "navbar-brand" }, new { @style = "color:white;  font-size:22px" })
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample02" aria-controls="navbarsExample02" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarsExample02">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <span class="nav-link">@Html.ActionLink("DASHBOARD", "Index", "Home", routeValues: null, htmlAttributes: new { @style = "color:darkgray;" })</span>
                            </li>
                            <li class="nav-item">
                                <span class="nav-link">@Html.ActionLink("ANALYTICS", "Index", "Analytics", routeValues: null, htmlAttributes: new { @style = "color:darkgray;" })</span>
                            </li>
                            <li class="nav-item">
                                <span class="nav-link">@Html.ActionLink("BUDGET", "Index", "Budget", routeValues: null, htmlAttributes: new { @style = "color:darkgray;" })</span>
                            </li>
                            <li class="nav-item">
                                <span class="nav-link">@Html.ActionLink("TRANSACTIONS", "Index", "Transaction", routeValues: null, htmlAttributes: new { @style = "color:darkgray;" })</span>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">ACCOUNT</a>
                                <div class="dropdown-menu" aria-labelledby="accountDropdown">
                                    <!-- The below should be modified to have a modal pop up when clicked.-->
                                    <!-- There should also be options to select different accounts here -->
                                    <!-- Using the HomeController, it's possible to call the database and pre-populate this drop down-->
                                    <span class="dropdown-item">ADD ACCOUNT</span>
                                </div>
                            </li>
                        </ul>
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </nav>
        }
    }

    <div class="container body-content">

        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MiTiM Financial</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


